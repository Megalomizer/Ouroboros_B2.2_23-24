<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OuroborosEvents.MVVM.Views.EventsAccountCP"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
             Title="EventsAccountCP"
             NavigationPage.HasBackButton="False">
    
    <!--For buttons in the top row-->
    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="QR_Button"
            Clicked="QR_Button_Clicked"
            IconImageSource="qr_code_scan.png"
            Order="Primary"
            Priority="0"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
    <VerticalStackLayout>
        <!--Profile picture-->
        <Frame
            CornerRadius="100"
            WidthRequest="150"
            HeightRequest="150"
            Margin="0,20,0,0">
            <ImageButton Source="default_pfp.png"
                         x:Name="AccountCPProfilePicture"
                         Clicked="ImageButton_Clicked"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         BorderWidth="1"
                         CornerRadius="10"
                         WidthRequest="200"
                         HeightRequest="200"/>
        </Frame>

        <StackLayout>

            <HorizontalStackLayout Spacing="5"
                                   Margin="0,5,0,0"
                                   HorizontalOptions="Center">
                
                <!--All general information-->
                <Label x:Name="Firstname"
                       Text="{Binding User.FirstName}"
                       FontSize="35"
                       FontFamily="PoppinsBold"/>

                <Label x:Name="Lastname"
                       Text="{Binding User.LastName}"
                       FontSize="35"
                       FontFamily="PoppinsBold"/>

            </HorizontalStackLayout>

            <Label  Text="Info"
                    FontSize="24"
                    Margin="15,0,0,0"
                    FontFamily="PoppinsBold" />


            <BoxView Color="{x:StaticResource Gray500}"
                     HeightRequest="2"
                     HorizontalOptions="Fill" 
                     Margin="15,0,100,8"/>

            <Grid Margin="15,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0">
                    <Image.Source>
                        <FontImageSource FontFamily="FASolid" Glyph="{x:Static fa:Solid.Envelope}" Color="{x:StaticResource Primary}" />
                    </Image.Source>
                </Image>

                <StackLayout Grid.Column="1">
                    <Label Text="Email"
                           FontSize="15"
                           FontFamily="PoppinsBold"
                           Margin="20,0,0,0"/>

                    <Label Text="{Binding User.Email}"
                           x:Name="Emailaddress"
                           FontFamily="PoppinsRegular"
                           TextColor="{x:StaticResource Gray400}"
                           Margin="20,0,0,0"/>
                </StackLayout>
            </Grid>

            <Grid Margin="15,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0">
                    <Image.Source>
                        <FontImageSource FontFamily="FASolid" Glyph="{x:Static fa:Solid.Phone}" Color="{x:StaticResource Primary}" />
                    </Image.Source>
                </Image>

                <StackLayout Grid.Column="1">
                    <Label Text="Phonenumber"
                           FontSize="15"
                           FontFamily="PoppinsBold"
                           Margin="20,0,0,0"/>

                    <Label Text="{Binding User.PhoneNumber}"
                           x:Name="Phonenumber"
                           FontFamily="PoppinsRegular"
                           TextColor="{x:StaticResource Gray400}"
                           Margin="20,0,0,0"/>
                </StackLayout>
            </Grid>

            <Label  Text="Social accounts"
                    FontSize="24"
                    Margin="15,40,0,0"
                    FontFamily="PoppinsBold" />

            <BoxView Color="{x:StaticResource Gray500}"
                     HeightRequest="2"
                     HorizontalOptions="Fill" 
                     Margin="15,0,100,8"/>

            <Grid Margin="15,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0">
                    <Image.Source>
                        <FontImageSource FontFamily="FASolid" Glyph="{x:Static fa:Solid.Link}" Color="{x:StaticResource Primary}" />
                    </Image.Source>
                </Image>

                <StackLayout Grid.Column="1">

                    <Label Text="LinkedIn"
                           FontSize="15"
                           FontFamily="PoppinsBold"
                           Margin="20,0,0,0"/>

                    <Label Text="{Binding User.LinkedIn}"
                           x:Name="LinkedIn"
                           FontFamily="PoppinsRegular"
                           TextColor="{x:StaticResource Gray400}"
                           Margin="20,0,0,0"/>
                </StackLayout>
            </Grid>

            <Button x:Name="LogoutButton"
                    Text="Log out"
                    Margin="0,10,0,0"
                    FontSize="18"
                    HeightRequest="50"
                    Clicked="LogoutUser"/>

                <HorizontalStackLayout HorizontalOptions="Center" Margin="5,10,5,0" Spacing="10">
                    <Button x:Name="EditAccountButton"
                            Text="Edit Account"
                            FontSize="18"
                            HeightRequest="50"
                            Clicked="EditAccountButton_Clicked"/>
                    
                    <Button x:Name="ShowContactInfoQRBtn"
                            Text="Share Contact Info"
                            FontSize="18"
                            HeightRequest="50"
                            Clicked="ShowContactInfoQRBtn_Clicked"/>
                </HorizontalStackLayout>

            </StackLayout>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>