<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OuroborosEvents.MVVM.Views.CreateNewEventCP"
             Title="New Event">

    <StackLayout>

        <Entry x:Name="Name"
               Placeholder="Name"/>
        <Editor x:Name="Description"
                Placeholder="Description"
                HeightRequest="100"/>
        <DatePicker x:Name="StartingDate"/>
        <TimePicker x:Name="StartingTime"/>
        <DatePicker x:Name="EndingDate"/>
        <TimePicker x:Name="EndingTime"/>

        <Button x:Name="CreateEvent"
                Text="Save Event"
                Clicked="SaveEvent_btn"/>

    </StackLayout>
    
</ContentPage>